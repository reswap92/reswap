<script>
let t = 30;
const box = document.getElementById("secret");

const timer = setInterval(() => {
  t--;
  box.textContent = box.textContent.replace(/\d+\.\.\./, t + "...");
  if (t <= 0) {
    clearInterval(timer);
    document.body.innerHTML =
      "<h1 style='color:red'>üí• FILE AUTODISTRUTTO</h1>";
  }
}, 1000);
</script>

